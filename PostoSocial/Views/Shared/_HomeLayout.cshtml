<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PostoSocial</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid">
        <div class="row">
            <div class="col-5 col-sm-3">
                <svg id="menuIcon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16" onclick="document.querySelector('#leftSidebar').classList.toggle('sidebar')">
                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                </svg>
                <img id="logo" src="~/img/Posto.png">
            </div>
            <div class="desktop headerTitle col-3 col-sm-5 col-xl-6">Posto - A Social Platform</div>
            <div class="desktop spacer col-1"></div>
            <div id="buttonBar" class="col-7 col-sm-3 col-xl-2">
                <div id="signupButton" class="btn btn-primary">Sign Up</div>
                <div id="loginButton" class="btn btn-primary">Login</div>
            </div>
        </div>
    </header>
    <main role="main" class="container-fluid p-0" onclick="document.querySelector('#leftSidebar').classList.add('sidebar')">
        <div class="row m-0 p-0">
            <aside id="leftSidebar" class="sidebar col-2 col-xl-2">
                Work in progress
            </aside>
            <div id="posts" class="col-12 col-xl-7 p-0 m-0">
                @RenderBody()
            </div>
            <aside id="rightSidebar" class="sidebar col-2 col-xl-2">
                <div class="row"><span>Reccomended Postos:</span></div>
                @try
                {
                    @foreach (Forum forum in ViewBag.ReccomendedForums)
                    {
                        <a asp-controller="Forum" asp-action="Home" asp-route-forumName="@forum.ForumName">
                            <div class="container-fluid col-md-10 offset-md-1 m-2 forumReccomend">
                            <div class="row postForum p-0">
                                <div class="p-0 m-0 col-3 forumIcon"><img class="" src="~img/ForumIcons"></div>
                                <span class="p-0 m-0 col forumName">p/@forum.ForumName</span>
                            </div>
                        </div>
                    </a>
                    }
                }
                catch
                {
                    <p>sorry. cannot get reccomendeds.</p>
                }
            </aside>
        </div>
    </main>
</body>
</html>